{
    "require": {
        "slywalker/boost_cake": "dev-master"
        ,"cakephp/debug_kit": "2.2.*"
        ,"cakedc/search": "*"
        ,"jquery/jquery": "1.9.*"
        ,"twitter/bootstrap": "3.*"
    },

    "scripts" : {
        "post-update-cmd" : [
            "mv Vendor/jquery/jquery/*.js webroot/js/vendor/",
            "rm -rf Vendor/jquery"
